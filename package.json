{
  "name": "bnbchain-mcp",
  "module": "index.ts",
  "scripts": {
    "start": "node dist/server/stdio.js",
    "start:sse": "node dist/server/sse.js",
    "dev": "bun --watch run src/server/stdio.ts",
    "dev:sse": "bun --watch run src/server/sse.ts",
    "build": "bun build src/**/*.ts --outdir dist --target node",
    "test": "npx @modelcontextprotocol/inspector bun dev",
    "prepare": "husky",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "typescript": "^5.0.0",
    "viem": "^2.27.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "husky": "^9.1.6",
    "prettier": "3.2.4",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "always",
        [
          "sentence-case"
        ]
      ]
    }
  }
}
